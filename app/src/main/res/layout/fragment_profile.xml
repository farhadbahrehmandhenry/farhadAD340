<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/size410"
        android:layout_height="@dimen/size535"
        android:scaleType="fitCenter"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/profile_pic" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:background="@color/cardview_shadow_end_color"
        android:onClick="backToProfileDetail"
        android:paddingLeft="@dimen/padding12"
        android:paddingRight="@dimen/padding12"
        app:srcCompat="@drawable/arrow_back" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/name"
        android:textSize="@dimen/textSize24"
        android:layout_marginStart="@dimen/margin16"
        android:layout_below="@+id/profileImage">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textSize18"
        android:layout_marginStart="@dimen/margin16"
        android:layout_below="@+id/name">
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_height="wrap_content"
        android:id="@+id/occupation"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textSize18"
        android:layout_marginStart="@dimen/margin16"
        android:layout_below="@+id/age">
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/textSize18"
        android:layout_marginStart="@dimen/margin16"
        android:layout_below="@+id/occupation">
        >
    </TextView>

</RelativeLayout>